.endif	# elif
.endif	# context defined

.MAKEFLAGS: -r

.if defined(OBJECTDIR)
MAKEOBJDIR=${OBJECTDIR}
.endif

.if defined(SOURCEDIR)
MAKESRCDIRPATH=${SOURCEDIR}
.endif
