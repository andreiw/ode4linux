#CENV=-Xc
CENV= -DNEED_LOCK_DEFS -DNO_FLOCK -DBSD_COMP -DNO_STRINGS -DNO_KILLPG
NO_AR_L=
NO_RANLIB=
NO_SETENV=NO_SETENV
PORTING_OFILES=environment.o strcasecmp.o va_argv.o
