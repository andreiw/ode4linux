.if defined(context)

.if !empty(context:M*_osf1)
TARGET_OS=OSF1
target_os=osf1
OBJECT_FORMAT=MACHO
ARCHIVE_FORMAT=OSFARCH
SHARED_LIBRARY_FORMAT=MACHO

NO_STATVFS=NO_STATVFS
DEPEND_CFLAGS=-MD
.if (${context} != "alpha_osf1")
CFLAGS+=  -pedantic\
          -Dlint\
          -Wall\
          -Wshadow\
          -Wwrite-strings\
          -Wpointer-arith\
          -Wstrict-prototypes
.endif

.if (${context} == "pmax_osf1")
MACHINE=mips
TARGET_MACHINE=PMAX
target_machine=pmax
TARGET_CPU=MIPS
target_cpu=mips

.elif (${context} == "mmax_osf1")
